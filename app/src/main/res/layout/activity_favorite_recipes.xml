<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@+id/bottomButtons">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourite Recipes!"
            android:textColor="#FF4081"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="8dp" />

        <!-- Scrollable Container for Cards -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Recipe Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="#FFDFDF"
                    android:cardCornerRadius="12dp"
                    android:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <!-- Recipe Image -->
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/rounded_image_mask"
                            android:clipToOutline="true"
                            android:contentDescription="Smoothie Bowl"
                            android:scaleType="centerCrop"
                            android:src="@drawable/smoothie_bowl" />

                        <!-- Recipe Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Smoothie Bowl"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:text="A delightful blend of cooked pasta tossed with fresh vegetables and diced meat, creating a colorful and satisfying dish perfect for a light meal or side."
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Read more ..."
                                android:textColor="#FF4081"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />

                            <!-- Time and Difficulty Row -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:background="@color/splash_background"
                                    android:drawableStart="@drawable/ic_time"
                                    android:drawablePadding="4dp"
                                    android:padding="4dp"
                                    android:text="10 min"
                                    android:textColor="@android:color/white"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/splash_background"
                                    android:drawableStart="@drawable/ic_difficulty"
                                    android:drawablePadding="4dp"
                                    android:padding="4dp"
                                    android:text="Level 0"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Favorite Icon"
                                    android:src="@drawable/ic_favorite"
                                    android:tint="#FF4081" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Recipe Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="#FFDFDF"
                    android:cardCornerRadius="12dp"
                    android:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <!-- Recipe Image -->
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/rounded_image_mask"
                            android:clipToOutline="true"
                            android:contentDescription="Vegetable Kebab"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vegetable_kebab" />

                        <!-- Recipe Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vegetable Kebab"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:text="Grilled skewers of fresh vegetables, seasoned with herbs and spices. Lightly charred on the outside yet tender on the inside."
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Read more ..."
                                android:textColor="#FF4081"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />

                            <!-- Time and Difficulty Row -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:background="@color/splash_background"
                                    android:drawableStart="@drawable/ic_time"
                                    android:drawablePadding="4dp"
                                    android:padding="4dp"
                                    android:text="30 min"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/splash_background"
                                    android:drawableStart="@drawable/ic_difficulty"
                                    android:drawablePadding="4dp"
                                    android:padding="4dp"
                                    android:text="Level 0"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Favorite Icon"
                                    android:src="@drawable/ic_favorite"
                                    android:tint="#FF4081" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Recipe Card 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="#FFDFDF"
                    android:cardCornerRadius="12dp"
                    android:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <!-- Recipe Image -->
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/rounded_image_mask"
                            android:clipToOutline="true"
                            android:contentDescription="Rice Balls"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rice_balls" />

                        <!-- Recipe Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rice Balls (Onigiri)"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:text="Rice balls shaped into spheres or triangles, stuffed with tuna or vegetables, perfect for a fun and portable meal for kids."
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Read more ..."
                                android:textColor="#FF4081"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />

                            <!-- Time and Difficulty Row -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:background="@color/splash_background"
                                    android:drawableStart="@drawable/ic_time"
                                    android:drawablePadding="4dp"
                                    android:padding="4dp"
                                    android:text="20 min"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/splash_background"
                                    android:drawableStart="@drawable/ic_difficulty"
                                    android:drawablePadding="4dp"
                                    android:padding="4dp"
                                    android:text="Level 0"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="16dp"
                                    android:contentDescription="Favorite Icon"
                                    android:src="@drawable/ic_favorite"
                                    android:tint="#FF4081" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFEBEE"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/buttonmenu"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:background="@drawable/button_bluestroke"
            android:scaleType="centerInside"
            android:src="@drawable/menu" />

        <ImageButton
            android:id="@+id/buttonsearch"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:background="@drawable/button_bluestroke"
            android:scaleType="centerInside"
            android:src="@drawable/search" />

        <ImageButton
            android:id="@+id/buttonfav"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:background="@drawable/button_bluestroke"
            android:scaleType="centerInside"
            android:src="@drawable/fav" />
    </LinearLayout>
</RelativeLayout>
