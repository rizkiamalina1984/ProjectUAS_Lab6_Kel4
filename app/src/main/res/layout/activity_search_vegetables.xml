<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F875AA">

    <!-- Search Bar at the Top (EditText and Icon) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/vegetables2"
            android:textStyle="bold"
            android:background="@drawable/search_bar_background"
            android:padding="14dp"
            android:textColor="#F875AA"
            android:textColorHint="#FF007F"
            android:textSize="16sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- First Card (Pasta Salad) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_image_mask"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pasta_salad" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pasta_salad"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_delightful_blend_of_cooked_pasta_tossed_with_fresh_vegetables_and_diced_meat_creating_a_colorful_and_satisfying_dish_perfect_for_a_light_meal_or_side"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_more"
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_20_min"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/time_button_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/time_icon_scaled" />

                <TextView
                    android:id="@+id/recipeLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_0"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/level_button_background"
                    android:padding="4dp"
                    app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Second Card (Red Bean Soup) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/recipeTitle" <!-- Fixed Constraint -->
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/recipeImage9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_image_mask"
        android:clipToOutline="true"
        android:contentDescription="@string/recipe_image"
        android:scaleType="centerCrop"
        android:src="@drawable/red_bean" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipeTitle9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Bean Soup"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipeDescription9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A nutritious soup made from red beans and vegetables, rich in protein and fiber."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recipeReadMore9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_more2"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipeTime9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/time_button_background"
                android:drawableStart="@drawable/time_icon_scaled"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="45 min"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recipeLevel9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_button_background"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="@string/level_0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

            <ImageView
                android:id="@+id/favoriteIcon9"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/favorite_icon4"
                android:src="@drawable/favorite_icon" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <!-- Bottom Navigation Bar -->
<LinearLayout
android:id="@+id/bottomButtons"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="#FFEBEE"
android:gravity="center"
app:layout_constraintBottom_toBottomOf="parent">

<ImageButton
    android:id="@+id/buttonmenu"
    android:layout_width="126dp"
    android:layout_height="110dp"
    android:src="@drawable/menu"
    android:background="@drawable/button_3tap"
    android:scaleType="centerInside"
    android:layout_marginEnd="8dp"/>

<ImageButton
    android:id="@+id/buttonsearch"
    android:layout_width="126dp"
    android:layout_height="110dp"
    android:src="@drawable/search"
    android:background="@drawable/button_3tap"
    android:scaleType="centerInside"
    android:layout_marginEnd="8dp"/>

<ImageButton
    android:id="@+id/buttonfav"
    android:layout_width="126dp"
    android:layout_height="110dp"
    android:src="@drawable/fav"
    android:background="@drawable/button_3tap"
    android:scaleType="centerInside"/>
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
