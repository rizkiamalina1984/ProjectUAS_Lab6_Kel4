<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <!-- Judul dan Subjudul -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Home"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Hey there, ready to make something delicious?"
            android:textSize="16sp"
            android:textColor="#FF4081" />

        <!-- Bagian Menu Horizontal -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Menu Item 1 hingga 5 -->
                <ImageButton
                    android:id="@+id/menu1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/menu_image1"
                    android:contentDescription="Menu 1" />

                <ImageButton
                    android:id="@+id/menu2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/menu_image2"
                    android:contentDescription="Menu 2" />

                <ImageButton
                    android:id="@+id/menu3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/menu_image3"
                    android:contentDescription="Menu 3" />

                <ImageButton
                    android:id="@+id/menu4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/menu_image4"
                    android:contentDescription="Menu 4" />

                <ImageButton
                    android:id="@+id/menu5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/menu_image5"
                    android:contentDescription="Menu 5" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Section Popular Picks -->
        <TextView
            android:id="@+id/popularPicksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Popular Picks"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Popular Picks in Horizontal Scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Popular Pick Items -->
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/popular_image1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Popular 1" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/popular_image2"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Popular 2" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/popular_image3"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Popular 3" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/popular_image4"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Popular 4" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/popular_image5"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Popular 5" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Section Recommended For You -->
        <TextView
            android:id="@+id/recommendedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Recommended For You"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Recommended For You in Horizontal Scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Recommended For You Items -->
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/recommended_image1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Recommended 1" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/recommended_image2"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Recommended 2" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/recommended_image3"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Recommended 3" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/recommended_image4"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Recommended 4" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/recommended_image5"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Recommended 5" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
