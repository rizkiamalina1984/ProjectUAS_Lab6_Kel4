<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@+id/bottomButtons">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Picks"
            android:textColor="#F875AA"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="1dp" />

        <!-- Scrollable Container for Cards -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Fifth Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vege_fried" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vegetable Fried Rice"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A flavorful fried rice dish mixed
with fresh vegetables like carrots,
peas, and corn"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="25 min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="Level 1"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Sixth Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/grilled_chick" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grilled Chicken Sandwich"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/golden_and_fluffy_pancakes_perfect_for_a_delicious_breakfast_or_brunch"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/_20_min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/level_0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon6"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Seventh Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/onigiri" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice Balls (Onigiri)"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice balls shaped into spheres or
triangles, stuffed with tuna or
vegetables."
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/_20_min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/level_0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon6"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Eight Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vege_burger" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vegetable Burger"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A veggie patty burger with lettuce,
tomato, and yogurt sauce, served in
whole grain buns."
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/_20_min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/level_0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon8"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Navigation Bar, pinned to the bottom of the screen -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFEBEE"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/buttonmenu"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/menu"
            android:background="@drawable/button_3tap"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/buttonsearch"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:background="@drawable/button_3tap"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/buttonfav"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/fav"
            android:background="@drawable/button_3tap"
            android:scaleType="centerInside" />
    </LinearLayout>
</RelativeLayout>