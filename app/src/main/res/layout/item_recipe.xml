                    android:drawablePadding="4dp"
                    android:textColor="@color/material_dynamic_secondary20"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/favoriteIcon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/favorite_icon"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Fourth Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_background"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/recipeImage4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pancakes"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/recipe_image"
            android:background="@drawable/rounded_image_mask"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluffy Pancakes"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden and fluffy pancakes, perfect for a delicious breakfast or brunch."
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/recipeReadMore4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More..."
