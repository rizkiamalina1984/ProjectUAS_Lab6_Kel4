<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pasta_salad" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasta Salad"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_delightful_blend_of_cooked_pasta_tossed_with_fresh_vegetables_and_diced_meat_creating_a_colorful_and_satisfying_dish_perfect_for_a_light_meal_or_side"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_more"
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_20_min"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/time_button_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    app:drawableStartCompat="@drawable/time_icon_scaled" />


                <TextView
                    android:id="@+id/recipeLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 0"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/level_button_background"
                    android:padding="4dp"
                    app:drawableStartCompat="@drawable/spicy_icon_scaled" />


                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Second Card (Duplicate) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/menu2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetable Kebab"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grilled skewers of fresh vegetables, seasoned with herbs and spices. Lightly charred on the outside yet tender on the inside, these kebabs are a healthy and flavorful option."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More..."
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="4dp"
                    android:text="30 min"
                    android:textColor="@color/material_dynamic_secondary20"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recipeLevel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawableLeft="@drawable/ic_level"
                    android:drawablePadding="4dp"
                    android:text="Level 1"
                    android:textColor="@color/material_dynamic_secondary20"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/favoriteIcon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Third Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/smoothie" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fruit Smoothie"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A refreshing and nutritious blend of mixed fruits. Perfect as a healthy breakfast or snack."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More..."
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="4dp"
                    android:text="10 min"
                    android:textColor="@color/material_dynamic_secondary20"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recipeLevel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawableLeft="@drawable/ic_level"
                    android:drawablePadding="4dp"
                    android:text="Level 0"
                    android:textColor="@color/material_dynamic_secondary20"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/favoriteIcon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Fourth Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pancakes" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluffy Pancakes"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden and fluffy pancakes, perfect for a delicious breakfast or brunch."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More..."
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="4dp"
                    android:text="15 min"
                    android:textColor="@color/material_dynamic_secondary20"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recipeLevel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawableLeft="@drawable/ic_level"
                    android:drawablePadding="4dp"
                    android:text="Level 0"
                    android:textColor="@color/material_dynamic_secondary20"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/favoriteIcon4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
