<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@+id/bottomButtons">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended For You"
            android:textColor="#F875AA"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="1dp" />

        <!-- Scrollable Container for Cards -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nineth Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/red_bean" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Red Bean Soup"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A nutritious soup made from red
beans and vegetables, rich in
protein and fiber."
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="45 min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/level_0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon9"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Tenth Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage10"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banana_pan" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Banana Pancake"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oatmeal pancakes made with
mashed bananas, drizzled with
honey for sweetness."
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="15 min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/level_0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon10"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Eleventh Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage11
"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/stir_broc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stir-fried Broccoli and Tofu"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stir-fried broccoli and tofu with
simple spices, creating a healthy
and colorful dish. "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/_20_min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="Level 1"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon11"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Twelve Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_card_background"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/recipeImage12"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_image_mask"
                        android:clipToOutline="true"
                        android:contentDescription="@string/recipe_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fresh_fruit" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipeTitle12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fresh Fruit and Yogurt"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recipeDescription12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fresh fruit slices served with yogurt
for dipping, offering a refreshing
snack."
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/recipeReadMore12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more2"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recipeTime12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/time_button_background"
                                android:drawableStart="@drawable/time_icon_scaled"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/_20_min"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/recipeLevel12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/level_button_background"
                                android:drawablePadding="4dp"
                                android:padding="4dp"
                                android:text="@string/level_0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                            <ImageView
                                android:id="@+id/favoriteIcon12"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/favorite_icon4"
                                android:src="@drawable/favorite_icon" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Navigation Bar, pinned to the bottom of the screen -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFEBEE"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/buttonmenu"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/menu"
            android:background="@drawable/button_3tap"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/buttonsearch"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:background="@drawable/button_3tap"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/buttonfav"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/fav"
            android:background="@drawable/button_3tap"
            android:scaleType="centerInside" />
    </LinearLayout>
</RelativeLayout>