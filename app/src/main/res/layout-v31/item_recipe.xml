<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipes"
        android:textColor="#F875AA"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:layout_marginBottom="1dp" />

    <!-- First Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_image_mask"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pasta_salad" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasta Salad"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_delightful_blend_of_cooked_pasta_tossed_with_fresh_vegetables_and_diced_meat_creating_a_colorful_and_satisfying_dish_perfect_for_a_light_meal_or_side"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_more"
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_20_min"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/time_button_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/time_icon_scaled" />

                <TextView
                    android:id="@+id/recipeLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_0"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/level_button_background"
                    android:padding="4dp"
                    app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Second Card (Duplicate) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_image_mask"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/vegetable_kebab" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetable Kebab"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grilled_skewers_of_fresh_vegetables_seasoned_with_herbs_and_spices_lightly_charred_on_the_outside_yet_tender_on_the_inside_these_kebabs_are_a_healthy_and_flavorful_option"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More..."
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/time_button_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/time_icon_scaled" />

                <TextView
                    android:id="@+id/recipeLevel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_0"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/level_button_background"
                    android:padding="4dp"
                    app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                <ImageView
                    android:id="@+id/favoriteIcon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon2"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Third Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_image_mask"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/smoothie_bowl" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smoothie_bowl"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A frozen smoothie topped with fresh fruit, granola, and chia seeds, making it a refreshing and nutritious treat."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More..."
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 min"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/time_button_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/time_icon_scaled" />

                <TextView
                    android:id="@+id/recipeLevel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_0"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/level_button_background"
                    android:padding="4dp"
                    app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                <ImageView
                    android:id="@+id/favoriteIcon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon3"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Fourth Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recipeImage4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_image_mask"
            android:clipToOutline="true"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pancakes" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluffy Pancakes"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDescription4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/golden_and_fluffy_pancakes_perfect_for_a_delicious_breakfast_or_brunch"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipeReadMore4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_more2"
                android:textColor="#FF0000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeTime4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/time_button_background"
                    android:drawableStart="@drawable/time_icon_scaled"
                    android:drawablePadding="4dp"
                    android:padding="4dp"
                    android:text="@string/_20_min"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recipeLevel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/level_button_background"
                    android:drawablePadding="4dp"
                    android:padding="4dp"
                    android:text="@string/level_0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/spicy_icon_scaled" />

                <ImageView
                    android:id="@+id/favoriteIcon4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/favorite_icon4"
                    android:src="@drawable/favorite_icon" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
